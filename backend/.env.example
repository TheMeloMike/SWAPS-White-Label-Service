# SWAPS White Label API Environment Configuration
# Copy this file to .env and update the values as needed

# ==============================================
# REQUIRED API KEYS (UPDATE THESE!)
# ==============================================
HELIUS_API_KEY=your_helius_api_key_here
SWAP_PROGRAM_ID=Swap111111111111111111111111111111111111111
RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# ==============================================
# PERSISTENCE CONFIGURATION
# ==============================================
ENABLE_PERSISTENCE=true
DATA_DIR=./data

# ==============================================
# TRADE LOOP ALGORITHM SETTINGS
# ==============================================
TRADELOOP_MAX_DEPTH=10
TRADELOOP_MIN_EFFICIENCY=0.6
TRADELOOP_GLOBAL_TIMEOUT_MS=30000

# ==============================================
# ADVANCED ALGORITHM CONFIGURATION
# ==============================================
ENABLE_BUNDLE_TRADES=true
FORCE_SCALABLE_IMPLEMENTATION=false
USE_PROBABILISTIC_SAMPLING=false

# ==============================================
# BACKGROUND SERVICES
# ==============================================
ENABLE_BACKGROUND_TRADE_DISCOVERY=true
BACKGROUND_SCAN_INTERVAL_MS=60000
CACHE_TTL_MS=1800000
MAX_CACHED_TRADES=1000

# ==============================================
# COLLECTION CONFIGURATION
# ==============================================
COLLECTION_ENABLED=true
MAX_COLLECTION_SIZE=1000
MAX_COLLECTIONS_PER_WALLET=20

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================
WEBHOOK_SECRET=your_webhook_secret_key_here

# ==============================================
# DEBUGGING & TESTING
# ==============================================
TRADE_SCORE_VERBOSE=false
COLLECTION_WANTS_TEST_MODE=false
